<% tasks.forEach(task => { %>
    <div class="card bg-base-100 shadow-sm hover:shadow-md transition-all cursor-pointer border border-base-200" onclick="window.location='/task/<%= task.id %>'">
        <div class="card-body flex-row justify-between items-center p-4">
            <div class="flex items-center gap-4">
                 <div class="w-3 h-3 rounded-full shrink-0
                    <%= task.status === 'completed' ? 'bg-success' :
                       (task.status === 'failed' || task.status === 'aborted' ? 'bg-error' :
                       (task.status === 'running' ? 'bg-info animate-pulse' : 'bg-neutral/20')) %>"></div>

                 <div class="min-w-0">
                    <h3 class="font-bold text-base truncate"><%= task.name %></h3>
                    <div class="flex items-center gap-3 text-xs text-base-content/60 mt-1">
                        <span><i class="far fa-calendar-alt"></i> <%= new Date(task.created_at).toLocaleDateString() %></span>
                        <span><i class="fas fa-map-marker-alt"></i> <%= task.cep %></span>
                        <div class="badge badge-ghost badge-xs"><%= task.status.toUpperCase() %></div>
                    </div>
                 </div>
            </div>

            <i class="fas fa-chevron-right opacity-30"></i>
        </div>
    </div>
<% }) %>
