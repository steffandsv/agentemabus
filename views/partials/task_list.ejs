<% tasks.forEach(task => { %>
    <div class="col-12 task-card-container" onclick="window.location='/task/<%= task.id %>'">
        <div class="card glass-panel border-0 hover-scale cursor-pointer">
            <div class="card-body d-flex align-items-center justify-content-between p-4">
                <!-- Left: Info -->
                <div class="d-flex align-items-center gap-4">
                    <div class="status-indicator-liquid">
                        <% if (task.status === 'completed') { %>
                            <div class="pulse-circle bg-success"></div>
                        <% } else if (task.status === 'failed' || task.status === 'aborted') { %>
                            <div class="pulse-circle bg-danger"></div>
                        <% } else if (task.status === 'running') { %>
                            <div class="pulse-circle bg-primary animate-pulse"></div>
                        <% } else { %>
                            <div class="pulse-circle bg-secondary"></div>
                        <% } %>
                    </div>
                    <div>
                        <h5 class="mb-1 text-white fw-bold brand-font"><%= task.name %></h5>
                        <div class="d-flex align-items-center gap-3 text-muted small">
                            <span><i class="far fa-calendar-alt"></i> <%= new Date(task.created_at).toLocaleDateString() %></span>
                            <span><i class="fas fa-map-marker-alt"></i> <%= task.cep %></span>
                            <span class="badge rounded-pill bg-white bg-opacity-10 text-white border border-white border-opacity-10 px-3">
                                <%= task.status.toUpperCase() %>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Right: Chevron -->
                <div class="text-muted opacity-50">
                    <i class="fas fa-chevron-right fa-lg"></i>
                </div>
            </div>
        </div>
    </div>
<% }) %>
