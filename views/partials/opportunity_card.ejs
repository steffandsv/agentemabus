<%
function getBadgeClass(score) {
    if (score >= 80) return 'badge-warning';
    if (score >= 50) return 'badge-success text-white';
    return 'badge-ghost';
}
function getTierName(score) {
    if (score >= 80) return 'ALTA RELEVÂNCIA';
    if (score >= 50) return 'MÉDIA RELEVÂNCIA';
    return 'BAIXA RELEVÂNCIA';
}
%>

<div class="card bg-base-100 shadow-md hover:shadow-xl transition-all duration-300 border border-base-200 h-full">
    <div class="card-body p-5 flex flex-col h-full">
        <!-- Header -->
        <div class="flex flex-col gap-1 mb-2">
            <h3 class="card-title text-base leading-tight"><%= opp.municipality || 'Município Desconhecido' %></h3>
            <span class="text-xs text-base-content/60 font-mono"><%= opp.title || 'Edital Sem Número' %></span>
        </div>

        <div class="mb-4">
            <div class="badge <%= getBadgeClass(opp.ipm_score) %> text-xs font-bold"><%= getTierName(opp.ipm_score) %></div>
        </div>

        <div class="divider my-0"></div>

        <!-- Body -->
        <div class="flex-1 py-2 relative">
            <% if (isLocked) { %>
                <!-- LOCKED CONTENT -->
                <div class="space-y-3 opacity-50 select-none">
                    <div>
                        <span class="text-xs uppercase font-bold opacity-60 block">Resumo</span>
                        <span class="text-sm">Conteúdo protegido.</span>
                    </div>
                    <div>
                        <span class="text-xs uppercase font-bold opacity-60 block">Valor Estimado</span>
                        <span class="text-xl font-bold">R$ ---.---,--</span>
                    </div>
                </div>

                <div class="absolute inset-0 flex items-center justify-center z-10">
                    <div class="badge badge-warning gap-2 p-3 font-bold shadow-lg text-black">
                        <i class="fas fa-lock"></i> RESTRITO
                    </div>
                </div>
            <% } else { %>
                <!-- UNLOCKED CONTENT -->
                <div class="space-y-3">
                    <div>
                        <span class="text-xs uppercase font-bold opacity-60 block">Resumo</span>
                        <span class="text-sm line-clamp-3"><%= opp.metadata_json && opp.metadata_json.resumo_teaser ? opp.metadata_json.resumo_teaser : 'Sem resumo disponível.' %></span>
                    </div>

                    <% if (opp.metadata_json && opp.metadata_json.tags_estrategicas) { %>
                    <div class="flex gap-1 flex-wrap">
                        <% opp.metadata_json.tags_estrategicas.slice(0, 3).forEach(tag => { %>
                            <span class="badge badge-xs badge-outline"><%= tag %></span>
                        <% }) %>
                    </div>
                    <% } %>

                    <div>
                        <span class="text-xs uppercase font-bold opacity-60 block">Valor Estimado</span>
                        <span class="text-xl font-bold text-primary"><%= opp.metadata_json && opp.metadata_json.valor_estimado_total ? opp.metadata_json.valor_estimado_total : 'Sob Consulta' %></span>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Footer -->
        <div class="card-actions justify-end mt-4 pt-2 border-t border-base-200">
            <% if (!isLocked) { %>
                <button class="btn btn-ghost btn-sm">Comparar</button>
                <button class="btn btn-primary btn-sm text-white" onclick="openOpportunityDetails(<%= opp.id %>)">Ver Detalhes</button>
            <% } else { %>
                 <button class="btn btn-disabled btn-sm" disabled>Bloqueado</button>
            <% } %>
        </div>
    </div>
</div>
