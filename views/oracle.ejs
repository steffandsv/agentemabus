<canvas id="loadingCanvas"></canvas>
<div id="loadingOverlay"></div>

<%- include('partials/footer') %>

<script>
    const dropZone = document.getElementById('dropZoneArea');
    const fileInput = document.getElementById('pdfFiles');
    const uploadForm = document.getElementById('uploadForm');
    const overlay = document.getElementById('loadingOverlay');
    const canvas = document.getElementById('loadingCanvas');
    const ctx = canvas.getContext('2d');
    const uploadContainer = document.getElementById('uploadContainer');
    const resultContainer = document.getElementById('resultContainer');

    // NEURAL STORM LOGIC
    const NEURAL_FRAGMENTS = [
      "LENDO: Cl√°usula 4.1...", "SCAN: CNPJ √ìrg√£o...", "ALERTA: Hist√≥rico Calote...",
      "BUSCA: Pre√ßo Teto...", "DECRYPT: Tabela Price...", "AN√ÅLISE: Fluxo Caixa...",
      "VARREDURA: Concorrentes...", "DETECTADO: Lote Mosaico...", "CALCULANDO: ROI...",
      "ESTRAT√âGIA: Impugna√ß√£o...", "CONECTANDO: Banco Central..."
    ];

    let animationId;
    let nodes = [];
    let fragments = [];

    function resizeCanvas() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
    }
    window.addEventListener('resize', resizeCanvas);
    resizeCanvas();

    function initNeuralStorm() {
        nodes = [];
        fragments = [];
        // Create Nodes
        for(let i=0; i<50; i++) {
            nodes.push({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                vx: (Math.random() - 0.5) * 2,
                vy: (Math.random() - 0.5) * 2
            });
        }
    }

    function drawNeuralStorm() {
        ctx.fillStyle = '#000000';
        ctx.fillRect(0, 0, canvas.width, canvas.height);

        // Update & Draw Nodes
        ctx.strokeStyle = 'rgba(0, 229, 255, 0.2)';
        ctx.fillStyle = '#00E5FF';

        nodes.forEach((node, i) => {
            node.x += node.vx;
            node.y += node.vy;

            if(node.x < 0 || node.x > canvas.width) node.vx *= -1;
            if(node.y < 0 || node.y > canvas.height) node.vy *= -1;

            ctx.beginPath();
            ctx.arc(node.x, node.y, 2, 0, Math.PI * 2);
            ctx.fill();

            // Connect nearby
            nodes.forEach((other, j) => {
                if(i !== j) {
                    const dx = node.x - other.x;
                    const dy = node.y - other.y;
                    const dist = Math.sqrt(dx*dx + dy*dy);
                    if(dist < 150) {
                        ctx.beginPath();
                        ctx.moveTo(node.x, node.y);
                        ctx.lineTo(other.x, other.y);
                        ctx.stroke();
                    }
                }
            });
        });

        // Glitch Text Fragments
        if(Math.random() < 0.1) { // 10% chance to add text per frame
             const text = NEURAL_FRAGMENTS[Math.floor(Math.random() * NEURAL_FRAGMENTS.length)];
             fragments.push({
                 text: text,
                 x: Math.random() * canvas.width * 0.8 + 50,
                 y: Math.random() * canvas.height * 0.8 + 50,
                 life: 60 // frames
             });
        }

        fragments.forEach((frag, i) => {
            frag.life--;
            ctx.font = '20px "Courier New", monospace';
            ctx.fillStyle = `rgba(0, 229, 255, ${frag.life / 60})`;
            ctx.fillText(frag.text, frag.x, frag.y);
            if(frag.life <= 0) fragments.splice(i, 1);
        });

        animationId = requestAnimationFrame(drawNeuralStorm);
    }

    // Drag & Drop UI
    ['dragenter', 'dragover'].forEach(eventName => {
        dropZone.addEventListener(eventName, (e) => {
            e.preventDefault();
            e.stopPropagation();
            dropZone.classList.add('dragover');
        }, false);
    });
    ['dragleave', 'drop'].forEach(eventName => {
        dropZone.addEventListener(eventName, (e) => {
            e.preventDefault();
            e.stopPropagation();
            dropZone.classList.remove('dragover');
        }, false);
    });
    dropZone.addEventListener('drop', (e) => {
        const files = e.dataTransfer.files;
        fileInput.files = files;
        handleUpload();
    });
    fileInput.addEventListener('change', handleUpload);

    async function handleUpload() {
        if (fileInput.files.length === 0) return;

        // Start Animation
        overlay.style.display = 'flex';
        canvas.style.display = 'block';
        initNeuralStorm();
        drawNeuralStorm();

        const formData = new FormData(uploadForm);

        try {
            const response = await fetch('/api/process-tr', {
                method: 'POST',
                body: formData
            });

            if (!response.ok) throw new Error(`Erro: ${response.status}`);

            const reader = response.body.getReader();
            const decoder = new TextDecoder("utf-8");
            let buffer = "";

            while (true) {
                const { done, value } = await reader.read();
                if (done) break;
                buffer += decoder.decode(value, { stream: true });

                const lines = buffer.split('\n');
                buffer = lines.pop();

                for (const line of lines) {
                    if (line.startsWith('data: ')) {
                        try {
                            const json = JSON.parse(line.substring(6));
                            if (json && json.metadata) {
                                renderResult(json);
                            }
                        } catch(e) {}
                    }
                }
            }

            // Stop Animation
            cancelAnimationFrame(animationId);
            overlay.style.display = 'none';
            canvas.style.display = 'none';
            uploadContainer.style.display = 'none';
            resultContainer.style.display = 'block';

        } catch (error) {
            console.error(error);
            alert("Erro ao processar: " + error.message);
            cancelAnimationFrame(animationId);
            overlay.style.display = 'none';
            canvas.style.display = 'none';
        }
    }

    function renderResult(data) {
        const meta = data.metadata || {}; // public_teaser
        const locked = data.locked_content || {}; // locked_modules

        // 1. Header (Teaser)
        const score = meta.ipm_score || 0;
        const scoreColor = score >= 80 ? 'var(--mabus-gold)' : (score >= 50 ? 'var(--neon-cyan)' : 'var(--alert-red)');

        document.getElementById('ipmDisplay').innerText = score;
        document.getElementById('ipmDisplay').style.color = scoreColor;

        document.getElementById('classificacaoDisplay').innerText = meta.classificacao || 'AN√ÅLISE CONCLU√çDA';
        document.getElementById('classificacaoDisplay').style.color = scoreColor;

        document.getElementById('resumoDisplay').innerText = `"${meta.resumo_glitch || meta.resumo_poderoso || '...'}"`;

        const tagsContainer = document.getElementById('tagsDisplay');
        tagsContainer.innerHTML = '';
        const tags = meta.tags_visuais || meta.tags_elite || [];
        tags.forEach(tag => {
            tagsContainer.innerHTML += `<span class="elite-tag">${tag}</span>`;
        });

        // 2. Modules (Atomic Widgets)
        const grid = document.getElementById('modulesGrid');
        grid.innerHTML = '';

        const createWidget = (key, moduleData) => {
            if (!moduleData) return;
            const title = moduleData.titulo || key.toUpperCase();
            const cost = moduleData.custo_watts || 100;
            const cardId = `module-${key}`;

            let contentHtml = '';

            // WIDGET LOGIC:
            // Strategy (taticas)
            if (moduleData.taticas && Array.isArray(moduleData.taticas)) {
                contentHtml = moduleData.taticas.map(t => `
                    <div class="strategy-item">
                        <div class="d-flex align-items-center">
                            <span class="strategy-icon">${t.icone || 'üîπ'}</span>
                            <div>
                                <div class="strategy-title">${t.titulo}</div>
                                <small class="text-muted">${marked.parseInline(t.texto || '')}</small>
                            </div>
                        </div>
                    </div>
                `).join('');
            }
            // Financial (dados)
            else if (moduleData.dados && Array.isArray(moduleData.dados)) {
                contentHtml = '<table class="finance-table"><tbody>';
                contentHtml += moduleData.dados.map(d => `
                    <tr>
                        <td class="finance-label">${d.label}</td>
                        <td class="finance-value ${d.alerta === 'ALTO RISCO' ? 'alert-high' : ''}">${d.valor}</td>
                    </tr>
                `).join('');
                contentHtml += '</tbody></table>';
            }
            // Risks (lista_riscos) or Fallback
            else if (moduleData.lista_riscos && Array.isArray(moduleData.lista_riscos)) {
                contentHtml = moduleData.lista_riscos.map(r => `
                    <div class="risk-list-item"><i class="fas fa-exclamation-triangle"></i> ${marked.parseInline(r)}</div>
                `).join('');
            }
            // Fallback for V4 data or other structures
            else if (moduleData.conteudo_oculto) {
                 const text = Array.isArray(moduleData.conteudo_oculto)
                    ? moduleData.conteudo_oculto.map(i => `‚Ä¢ ${i.item || i}: ${i.motivo || ''}`).join('<br>')
                    : moduleData.conteudo_oculto;
                 contentHtml = marked.parse(text);
            }

            const html = `
                <div class="col-md-6">
                    <div class="module-card" id="${cardId}">
                        <div class="module-header d-flex justify-content-between">
                            <span>${title}</span>
                            <span class="text-muted small"><i class="fas fa-bolt text-gold"></i> ${cost}</span>
                        </div>
                        <div class="module-body">
                            <div class="blurred-text" id="blur-${key}">
                                ${contentHtml}
                            </div>
                            <div class="unlock-overlay" id="overlay-${key}">
                                <button class="btn btn-unlock" onclick="unlockModule('${key}', ${cost})">
                                    [ üîì REVELAR ]
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            grid.innerHTML += html;
        };

        // Render known modules from V5 prompt
        if (locked.estrategia_vitoria) createWidget('estrategia_vitoria', locked.estrategia_vitoria);
        if (locked.analise_financeira) createWidget('analise_financeira', locked.analise_financeira);
        if (locked.armadilhas_juridicas) createWidget('armadilhas_juridicas', locked.armadilhas_juridicas);

        // Fallback for V4 keys if V5 not present
        if (!locked.estrategia_vitoria && locked.analise_risco_financeiro) createWidget('analise_risco_financeiro', locked.analise_risco_financeiro);

        // 3. Sniper Form Setup
        document.getElementById('sniperName').value = meta.edital_numero || 'Oracle Mission';
        document.getElementById('sniperMetadata').value = JSON.stringify(meta);

        if (data.file_path) {
            document.getElementById('sniperExistingFilePath').value = data.file_path;
        }

        document.getElementById('sniperGridData').value = "ID;Descricao;valor_venda;quantidade\n";
    }

    window.unlockModule = function(key, cost) {
        const blur = document.getElementById(`blur-${key}`);
        const overlay = document.getElementById(`overlay-${key}`);
        if (blur) blur.classList.remove('blurred-text');
        if (overlay) overlay.style.display = 'none';
    };
</script>
