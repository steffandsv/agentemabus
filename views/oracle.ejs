<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

<style>
    /* Specific overrides for Oracle V5 */
    .drop-zone-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
    }

    .drop-zone {
        width: 60%;
        min-height: 400px;
        border: 1px dashed var(--neon-cyan);
        background: rgba(0,0,0,0.6);
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: all 0.4s ease;
        position: relative;
        backdrop-filter: blur(5px);
    }

    .drop-zone:hover {
        box-shadow: var(--neon-glow);
        border-color: #fff;
        transform: scale(1.02);
    }

    .drop-zone-text {
        font-family: var(--font-title);
        font-size: 1.5rem;
        color: var(--neon-cyan);
        margin-top: 20px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .drop-zone-sub {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-top: 10px;
    }

    /* NEURAL STORM CANVAS */
    #loadingCanvas {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: 9998;
        display: none;
    }

    #loadingOverlay {
        display: none;
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: black; /* Absolute Black */
        z-index: 9999;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .glitch-text {
        font-family: var(--font-tech);
        color: var(--neon-cyan);
        font-size: 1.5rem;
        position: absolute;
        text-shadow: 0 0 5px var(--neon-cyan);
        animation: glitch-anim 0.3s infinite;
    }

    @keyframes glitch-anim {
        0% { opacity: 1; transform: translate(0); }
        20% { opacity: 0.8; transform: translate(-2px, 2px); }
        40% { opacity: 1; transform: translate(2px, -2px); }
        60% { opacity: 0.8; transform: translate(-2px, -2px); }
        80% { opacity: 1; transform: translate(2px, 2px); }
        100% { opacity: 1; transform: translate(0); }
    }

    /* SHOP / RESULT */
    #resultContainer {
        display: none;
        padding-bottom: 100px;
    }

    .ipm-score-large {
        font-family: var(--font-tech);
        font-size: 5rem;
        font-weight: bold;
        line-height: 1;
    }

    .elite-tag {
        border: 1px solid var(--neon-cyan);
        color: var(--neon-cyan);
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        text-transform: uppercase;
        margin: 0 5px;
        box-shadow: var(--neon-glow);
    }

    .module-card {
        background: var(--card-surface);
        border: 1px solid var(--border-subtle);
        margin-bottom: 20px;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s;
    }

    .module-card:hover {
        transform: translateY(-5px);
        border-color: var(--border-highlight);
    }

    .module-header {
        background: rgba(255,255,255,0.05);
        padding: 15px;
        font-family: var(--font-title);
        font-size: 1.1rem;
        border-bottom: 1px solid var(--border-subtle);
        color: var(--text-main);
    }

    .module-body {
        padding: 20px;
        min-height: 150px;
        font-family: var(--font-body);
        color: var(--text-gray-300);
        position: relative;
    }

    /* WIDGETS */
    .strategy-item {
        background: #1a1a1a;
        border-left: 3px solid var(--neon-cyan);
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 0 5px 5px 0;
    }
    .strategy-icon { font-size: 1.5rem; margin-right: 10px; }
    .strategy-title { color: #fff; font-weight: bold; }

    .finance-table { width: 100%; border-collapse: collapse; }
    .finance-table td { padding: 8px; border-bottom: 1px solid #333; }
    .finance-label { color: #aaa; }
    .finance-value { text-align: right; color: #fff; font-family: var(--font-tech); }
    .alert-high { color: var(--alert-red) !important; text-shadow: 0 0 5px var(--alert-red); font-weight: bold; }

    .risk-list-item { color: #ff6b6b; margin-bottom: 5px; }

    /* Import Button */
    .btn-sniper-import {
        background: linear-gradient(90deg, #009245 0%, #FCEE21 100%);
        color: #000;
        font-weight: bold;
        border: none;
        font-family: var(--font-tech);
        text-transform: uppercase;
        letter-spacing: 2px;
        padding: 20px;
        font-size: 1.2rem;
        width: 100%;
        margin-top: 40px;
        transition: all 0.3s;
        box-shadow: 0 0 20px rgba(0, 255, 0, 0.3);
    }

    .btn-sniper-import:hover {
        transform: scale(1.02);
        box-shadow: 0 0 40px rgba(0, 255, 0, 0.6);
    }
</style>

