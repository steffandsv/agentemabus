<style>
    /* Specific overrides for Oracle V4 */
    .drop-zone-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
    }

    .drop-zone {
        width: 60%;
        min-height: 400px;
        border: 1px dashed var(--neon-cyan);
        background: rgba(0,0,0,0.6);
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: all 0.4s ease;
        position: relative;
        backdrop-filter: blur(5px);
    }

    .drop-zone:hover {
        box-shadow: var(--neon-glow);
        border-color: #fff;
        transform: scale(1.02);
    }

    .drop-zone-text {
        font-family: var(--font-title);
        font-size: 1.5rem;
        color: var(--neon-cyan);
        margin-top: 20px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .drop-zone-sub {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-top: 10px;
    }

    /* NEURAL PULSE LOADING */
    #loadingOverlay {
        display: none;
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: var(--void-bg);
        z-index: 9999;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .neural-orb {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: radial-gradient(circle, var(--neon-cyan) 0%, transparent 70%);
        box-shadow: 0 0 30px var(--neon-cyan);
        animation: orb-pulse 1.5s infinite ease-in-out;
        margin-bottom: 40px;
    }

    @keyframes orb-pulse {
        0% { transform: scale(0.8); opacity: 0.6; }
        50% { transform: scale(1.2); opacity: 1; }
        100% { transform: scale(0.8); opacity: 0.6; }
    }

    .synapse-text {
        font-family: var(--font-tech);
        color: var(--neon-cyan);
        font-size: 1.2rem;
        height: 30px;
        opacity: 0;
        transition: opacity 0.5s;
    }

    .synapse-text.active {
        opacity: 1;
    }

    /* SHOP / RESULT */
    #resultContainer {
        display: none;
        padding-bottom: 100px;
    }

    .ipm-score-large {
        font-family: var(--font-tech);
        font-size: 5rem;
        font-weight: bold;
        line-height: 1;
    }

    .elite-tag {
        border: 1px solid var(--neon-cyan);
        color: var(--neon-cyan);
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        text-transform: uppercase;
        margin: 0 5px;
        box-shadow: var(--neon-glow);
    }

    .module-card {
        background: var(--card-surface);
        border: 1px solid var(--border-subtle);
        margin-bottom: 20px;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s;
    }

    .module-card:hover {
        transform: translateY(-5px);
        border-color: var(--border-highlight);
    }

    .module-header {
        background: rgba(255,255,255,0.05);
        padding: 15px;
        font-family: var(--font-title);
        font-size: 1.1rem;
        border-bottom: 1px solid var(--border-subtle);
        color: var(--text-main);
    }

    .module-body {
        padding: 20px;
        min-height: 150px;
        font-family: var(--font-body);
        color: var(--text-gray-300);
        position: relative;
    }

    /* Import Button */
    .btn-sniper-import {
        background: linear-gradient(90deg, #009245 0%, #FCEE21 100%);
        color: #000;
        font-weight: bold;
        border: none;
        font-family: var(--font-tech);
        text-transform: uppercase;
        letter-spacing: 2px;
        padding: 20px;
        font-size: 1.2rem;
        width: 100%;
        margin-top: 40px;
        transition: all 0.3s;
        box-shadow: 0 0 20px rgba(0, 255, 0, 0.3);
    }

    .btn-sniper-import:hover {
        transform: scale(1.02);
        box-shadow: 0 0 40px rgba(0, 255, 0, 0.6);
    }
</style>

