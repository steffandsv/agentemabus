<style>
    /* Specific overrides for Analisador (Liquid Style) */
    .drop-zone-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
    }

    .drop-zone {
        width: 60%;
        min-height: 400px;
        border: 2px dashed var(--border-subtle);
        background: var(--bg-card);
        border-radius: var(--radius-lg);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: all 0.4s ease;
        position: relative;
        backdrop-filter: blur(10px);
        box-shadow: var(--shadow-soft);
        cursor: pointer;
    }

    .drop-zone:hover {
        box-shadow: var(--shadow-hover);
        border-color: var(--primary-blue);
        transform: scale(1.01);
        background: rgba(0, 113, 227, 0.02);
    }

    .drop-zone-text {
        font-family: var(--font-title);
        font-size: 1.5rem;
        color: var(--primary-blue);
        margin-top: 20px;
        font-weight: 600;
    }

    .drop-zone-sub {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-top: 10px;
    }

    /* Loader Pulse */
    #loader {
        display: none;
        text-align: center;
        padding: 60px 20px;
    }

    /* Result Container */
    #resultContainer {
        display: none;
        padding-bottom: 100px;
    }

    .ipm-score-large {
        font-family: var(--font-primary);
        font-size: 5rem;
        font-weight: 700;
        line-height: 1;
        background: -webkit-linear-gradient(45deg, var(--primary-blue), #8E2DE2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .elite-tag {
        background: rgba(0, 113, 227, 0.1);
        color: var(--primary-blue);
        border: 1px solid rgba(0, 113, 227, 0.2);
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        text-transform: uppercase;
        margin: 0 5px;
        font-weight: 600;
    }

    .module-card {
        background: var(--bg-card);
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-lg);
        margin-bottom: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-soft);
    }

    .module-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-hover);
    }

    .module-header {
        background: rgba(0,0,0,0.02);
        padding: 20px;
        font-family: var(--font-title);
        font-size: 1.1rem;
        font-weight: 600;
        border-bottom: 1px solid var(--border-subtle);
        color: var(--text-primary);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .module-body {
        padding: 24px;
        min-height: 150px;
        font-family: var(--font-primary);
        color: var(--text-secondary);
        position: relative;
    }

    /* Widgets */
    .strategy-item {
        background: rgba(0,0,0,0.02);
        border-left: 3px solid var(--primary-blue);
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 0 8px 8px 0;
    }
    .strategy-icon { font-size: 1.5rem; margin-right: 15px; color: var(--primary-blue); }
    .strategy-title { color: var(--text-primary); font-weight: 600; margin-bottom: 4px; }

    .finance-table { width: 100%; border-collapse: separate; border-spacing: 0 8px; }
    .finance-table td { padding: 8px 12px; }
    .finance-label { color: var(--text-secondary); font-weight: 500; }
    .finance-value { text-align: right; color: var(--text-primary); font-family: var(--font-tech); font-weight: 600; }
    .alert-high { color: var(--danger-red) !important; font-weight: 700; }

    .risk-list-item {
        color: var(--danger-red);
        margin-bottom: 8px;
        background: rgba(255, 59, 48, 0.05);
        padding: 8px 12px;
        border-radius: 8px;
    }

    /* Import Button */
    .btn-sniper-import {
        background: var(--success-green);
        color: white;
        font-weight: 600;
        border: none;
        border-radius: 30px;
        padding: 16px 32px;
        font-size: 1.1rem;
        width: 100%;
        margin-top: 40px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 12px rgba(52, 199, 89, 0.3);
    }

    .btn-sniper-import:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(52, 199, 89, 0.4);
        background: #2db34a;
    }

    .blurred-text {
        color: transparent !important;
        text-shadow: 0 0 16px rgba(0,0,0,0.2);
        filter: blur(8px);
        user-select: none;
        transition: all 0.5s ease;
    }

    .unlock-overlay {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(2px);
    }

    .btn-unlock {
        background: var(--mabus-gold);
        color: black;
        border: none;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(255, 214, 10, 0.3);
        transition: transform 0.2s;
    }

    .btn-unlock:hover {
        transform: scale(1.05);
    }

    .pulse-circle {
        width: 80px;
        height: 80px;
        margin: 0 auto 24px;
        background: var(--primary-blue);
        border-radius: 50%;
        animation: liquid-pulse 2s ease-in-out infinite;
    }

    @keyframes liquid-pulse {
      0%, 100% { transform: scale(1); opacity: 0.6; box-shadow: 0 0 0 0 rgba(0, 113, 227, 0.7); }
      50% { transform: scale(1.08); opacity: 1; box-shadow: 0 0 0 25px rgba(0, 113, 227, 0); }
    }
</style>

