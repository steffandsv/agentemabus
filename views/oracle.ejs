<script>
    const dropZone = document.getElementById('dropZoneArea');
    const fileInput = document.getElementById('pdfFiles');
    const uploadForm = document.getElementById('uploadForm');
    const overlay = document.getElementById('loadingOverlay');
    const uploadContainer = document.getElementById('uploadContainer');
    const resultContainer = document.getElementById('resultContainer');

    // Synapse Animation
    const synapseTexts = document.querySelectorAll('.synapse-text');
    let synapseIndex = 0;
    setInterval(() => {
        synapseTexts.forEach(el => el.classList.remove('active'));
        synapseIndex = (synapseIndex + 1) % synapseTexts.length;
        synapseTexts[synapseIndex].classList.add('active');
    }, 2500);

    // Drag & Drop UI
    ['dragenter', 'dragover'].forEach(eventName => {
        dropZone.addEventListener(eventName, (e) => {
            e.preventDefault();
            e.stopPropagation();
            dropZone.classList.add('dragover');
        }, false);
    });
    ['dragleave', 'drop'].forEach(eventName => {
        dropZone.addEventListener(eventName, (e) => {
            e.preventDefault();
            e.stopPropagation();
            dropZone.classList.remove('dragover');
        }, false);
    });
    dropZone.addEventListener('drop', (e) => {
        const files = e.dataTransfer.files;
        fileInput.files = files;
        handleUpload();
    });
    fileInput.addEventListener('change', handleUpload);

    async function handleUpload() {
        if (fileInput.files.length === 0) return;

        overlay.style.display = 'flex';
        const formData = new FormData(uploadForm);

        try {
            const response = await fetch('/api/process-tr', {
                method: 'POST',
                body: formData
            });

            if (!response.ok) throw new Error(`Erro: ${response.status}`);

            const reader = response.body.getReader();
            const decoder = new TextDecoder("utf-8");
            let buffer = "";

            while (true) {
                const { done, value } = await reader.read();
                if (done) break;
                buffer += decoder.decode(value, { stream: true });

                const lines = buffer.split('\n');
                buffer = lines.pop();

                for (const line of lines) {
                    if (line.startsWith('data: ')) {
                        try {
                            const json = JSON.parse(line.substring(6));
                            if (json && json.metadata) {
                                renderResult(json);
                            }
                        } catch(e) {}
                    }
                }
            }

            overlay.style.display = 'none';
            uploadContainer.style.display = 'none';
            resultContainer.style.display = 'block';

        } catch (error) {
            console.error(error);
            alert("Erro ao processar: " + error.message);
            overlay.style.display = 'none';
        }
    }

    function renderResult(data) {
        const meta = data.metadata || {};
        const locked = data.locked_content || {};

        // 1. Header
        const score = meta.ipm_score || 0;
        const scoreColor = score >= 80 ? 'var(--mabus-gold)' : (score >= 50 ? 'var(--neon-cyan)' : 'var(--alert-red)');

        document.getElementById('ipmDisplay').innerText = score;
        document.getElementById('ipmDisplay').style.color = scoreColor;

        document.getElementById('classificacaoDisplay').innerText = meta.classificacao || 'AN√ÅLISE CONCLU√çDA';
        document.getElementById('classificacaoDisplay').style.color = scoreColor;

        document.getElementById('resumoDisplay').innerText = `"${meta.resumo_poderoso || 'Sem resumo.'}"`;
        document.getElementById('valorTotalDisplay').innerText = meta.valor_estimado_total || 'Sigiloso';

        const tagsContainer = document.getElementById('tagsDisplay');
        tagsContainer.innerHTML = '';
        if (meta.tags_elite) {
            meta.tags_elite.forEach(tag => {
                tagsContainer.innerHTML += `<span class="elite-tag">${tag}</span>`;
            });
        }

        // 2. Modules
        const grid = document.getElementById('modulesGrid');
        grid.innerHTML = '';

        // Helper to render card
        const createCard = (key, moduleData) => {
            if (!moduleData) return;
            const title = moduleData.titulo || key;
            const content = Array.isArray(moduleData.conteudo_oculto)
                ? moduleData.conteudo_oculto.map(i => `‚Ä¢ ${i.item || i}: ${i.motivo || ''}`).join('<br>')
                : moduleData.conteudo_oculto;

            const cost = moduleData.custo_watts || 100;
            const cardId = `module-${key}`;

            const html = `
                <div class="col-md-6">
                    <div class="module-card" id="${cardId}">
                        <div class="module-header d-flex justify-content-between">
                            <span>${title}</span>
                            <span class="text-muted small"><i class="fas fa-bolt text-gold"></i> ${cost}</span>
                        </div>
                        <div class="module-body">
                            <div class="blurred-text" id="blur-${key}">
                                ${content}
                            </div>
                            <div class="unlock-overlay" id="overlay-${key}">
                                <button class="btn btn-unlock" onclick="unlockModule('${key}', ${cost})">
                                    [ üîì REVELAR ]
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            grid.innerHTML += html;
        };

        // Render specific known keys from the prompt structure
        if (locked.estrategia_vitoria) createCard('estrategia_vitoria', locked.estrategia_vitoria);
        if (locked.analise_risco_financeiro) createCard('analise_risco_financeiro', locked.analise_risco_financeiro);
        if (locked.itens_alpha) createCard('itens_alpha', locked.itens_alpha);
        if (locked.perfil_inimigo) createCard('perfil_inimigo', locked.perfil_inimigo);

        // 3. Sniper Form Setup
        document.getElementById('sniperName').value = meta.edital_numero || 'Oracle Mission';
        document.getElementById('sniperMetadata').value = JSON.stringify(meta);

        // Pass the file path if available (Server now returns it and doesn't delete it)
        if (data.file_path) {
            document.getElementById('sniperExistingFilePath').value = data.file_path;
        }

        // Use `gridData` with a dummy CSV header to satisfy validator if needed.
        document.getElementById('sniperGridData').value = "ID;Descricao;valor_venda;quantidade\n";
    }

    // Unlock Logic
    window.unlockModule = function(key, cost) {
        // In a real app, call backend to deduct. Here we simulate visual.
        // Check balance (visual only)
        // ...

        const blur = document.getElementById(`blur-${key}`);
        const overlay = document.getElementById(`overlay-${key}`);

        if (blur) blur.classList.remove('blurred-text');
        if (overlay) overlay.style.display = 'none';

        // Animate text reveal (simple color transition handled by CSS removal of class)
    };
</script>
