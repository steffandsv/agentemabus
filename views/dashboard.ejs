<%- include('partials/header') %>

<div class="row mb-4">
    <div class="col-12 text-center">
        <h2 class="brand-font text-neon">DASHBOARD TÁTICO</h2>
        <p class="text-muted">Gestão de Missões Ativas</p>
    </div>
</div>

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-end gap-2">
        <a href="/dashboard" class="btn btn-sm btn-outline-secondary <%= !showArchived ? 'active' : '' %>">ATIVOS</a>
        <a href="/dashboard?show_archived=true" class="btn btn-sm btn-outline-secondary <%= showArchived ? 'active' : '' %>">ARQUIVO</a>
    </div>
</div>

<% if (tasks.length === 0) { %>
    <div class="text-center py-5 border border-secondary rounded border-dashed opacity-50">
        <i class="fas fa-inbox fa-3x mb-3 text-muted"></i>
        <p class="text-muted">Nenhuma missão encontrada.</p>
        <a href="/oracle" class="btn btn-primary">NOVA MISSÃO</a>
    </div>
<% } else { %>
    <div class="row g-3">
        <% tasks.forEach(task => { %>
            <div class="col-12">
                <div class="card bg-panel border-secondary hover-glow">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <!-- Left: Info -->
                        <div class="d-flex align-items-center gap-3">
                            <div class="status-indicator">
                                <% if (task.status === 'completed') { %>
                                    <i class="fas fa-check-circle text-success fa-2x"></i>
                                <% } else if (task.status === 'failed') { %>
                                    <i class="fas fa-times-circle text-danger fa-2x"></i>
                                <% } else if (task.status === 'running') { %>
                                    <div class="spinner-border text-primary" role="status"></div>
                                <% } else { %>
                                    <i class="fas fa-clock text-muted fa-2x"></i>
                                <% } %>
                            </div>
                            <div>
                                <h5 class="mb-0 text-white"><%= task.name %></h5>
                                <small class="text-muted"><%= new Date(task.created_at).toLocaleDateString() %> | <%= task.cep %></small>
                            </div>
                        </div>

                        <!-- Right: Actions -->
                        <div class="d-flex align-items-center gap-3">
                            <% if (task.status === 'completed') { %>
                                <a href="/download/<%= task.id %>" class="btn btn-success btn-sm"><i class="fas fa-download"></i> EXCEL</a>
                            <% } %>

                            <a href="/task/<%= task.id %>" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> DETALHES
                            </a>

                            <div class="dropdown">
                                <button class="btn btn-link text-muted" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></button>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <form action="/task/<%= task.id %>/action" method="POST">
                                            <input type="hidden" name="action" value="archive">
                                            <button class="dropdown-item"><i class="fas fa-archive"></i> Arquivar</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>

<%- include('partials/footer') %>
