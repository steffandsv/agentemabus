    <script>
        // Attach click listeners to all "Obter Modelos" buttons
        document.querySelectorAll('.btn-fetch-models').forEach(btn => {
            btn.addEventListener('click', function() {
                const agent = this.dataset.agent;
                const providerSelect = document.getElementById(`${agent}_provider`);
                if (providerSelect) {
                    fetchModelsForAgent(agent, providerSelect.value, this);
                }
            });
        });

        async function fetchModelsForAgent(agent, provider, button) {
            const modelSelect = document.getElementById(`${agent}_model`);
            if (!modelSelect) return;
            
            const currentValue = modelSelect.value;
            
            // Show loading state on button
            button.disabled = true;
            button.classList.add('loading');
            const originalHTML = button.innerHTML;
            button.innerHTML = '<i class="fas fa-sync-alt"></i> ...';
            
            try {
                const res = await fetch('/api/admin/fetch-models', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ provider })
                });

                if (!res.ok) {
                    throw new Error('Erro ao carregar modelos');
                }

                const models = await res.json();
                
                if (models && models.length > 0) {
                    // Clear existing options
                    modelSelect.innerHTML = '';
                    
                    // Add new options
                    models.forEach(model => {
                        const option = document.createElement('option');
                        option.value = model.id;
                        option.textContent = model.name || model.id;
                        if (model.id === currentValue) {
                            option.selected = true;
                        }
                        modelSelect.appendChild(option);
                    });
                    
                    // If current value not in list, add it at the top
                    if (currentValue && !models.find(m => m.id === currentValue)) {
                        const option = document.createElement('option');
                        option.value = currentValue;
                        option.textContent = currentValue + ' (atual)';
                        option.selected = true;
                        modelSelect.insertBefore(option, modelSelect.firstChild);
                    }
                    
                    // Show success feedback
                    button.innerHTML = '<i class="fas fa-check"></i> OK';
                    button.style.background = 'linear-gradient(135deg, #10b981, #059669)';
                    setTimeout(() => {
                        button.innerHTML = originalHTML;
                        button.style.background = '';
                    }, 1500);
                } else {
                    // No models returned
                    button.innerHTML = '<i class="fas fa-exclamation-triangle"></i>';
                    setTimeout(() => { button.innerHTML = originalHTML; }, 1500);
                }
            } catch (e) {
                console.error('Error fetching models:', e);
                button.innerHTML = '<i class="fas fa-times"></i> Erro';
                button.style.background = 'linear-gradient(135deg, #ef4444, #dc2626)';
                setTimeout(() => { 
                    button.innerHTML = originalHTML; 
                    button.style.background = '';
                }, 2000);
            } finally {
                button.disabled = false;
                button.classList.remove('loading');
            }
        }
    </script>
