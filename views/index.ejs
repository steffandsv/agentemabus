<%- include('partials/header') %>

<div class="row mb-4 section">
    <div class="col-12 text-center">
        <h1 class="brand-font display-4" style="color: var(--text-primary);">BUSCA DE OPORTUNIDADES</h1>
        <p class="lead text-secondary">Inteligência de Mercado em Tempo Real</p>
    </div>
</div>

<!-- RADAR SYSTEM (Opportunities) -->
<div class="row g-4 mb-5">
    <% if (opportunities && opportunities.length > 0) { %>
        <% opportunities.forEach(opp => { %>
            <!-- Admin/Radar Items are locked for standard users.
                 Check if user is admin to unlock. -->
            <% const isLocked = (user && user.role === 'admin') ? false : true; %>

            <%- include('partials/opportunity_card', { opp: opp, isLocked: isLocked }) %>
        <% }) %>
    <% } else { %>
        <div class="col-12 text-center py-5">
            <h3 class="text-secondary">Nenhuma oportunidade na busca no momento.</h3>
            <p class="text-secondary">Utilize o Analisador para escanear seus próprios editais.</p>
            <a href="/oracle" class="btn btn-primary mt-3">IR PARA O ANALISADOR</a>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
